<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/book_imageView"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:background="@drawable/listview_photo_border"
        app:srcCompat="@drawable/ic_stock_book_photo_foreground" />

    <TextView
        android:id="@+id/book_adapter_title"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/book_imageView"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/book_adapter_author"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_adapter_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="11dp"
        android:layout_toRightOf="@+id/book_imageView"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Author"
        android:textStyle="italic"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/book_adapter_isbn"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_adapter_author"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@+id/book_imageView"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="ISBN"
        android:textColor="#CCCCCC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/book_adapter_owner"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_adapter_isbn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@+id/book_imageView"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Current Owner"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/book_adapter_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/book_imageView"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:scrollHorizontally="true"
        android:text="Status"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>
