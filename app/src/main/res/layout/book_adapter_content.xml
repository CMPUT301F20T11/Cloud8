<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/book_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/listview_photo_border"
        app:srcCompat="@drawable/ic_stock_book_photo_foreground" />

    <TextView
        android:id="@+id/book_adapter_title"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/imageView"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/book_adapter_owner"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_adapter_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/imageView"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="18sp"
        android:text="Current Owner" />

    <TextView
        android:id="@+id/book_adapter_desc"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_adapter_owner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/imageView"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="18sp"
        android:text="Description" />

    <TextView
        android:id="@+id/book_adapter_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_adapter_desc"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="-2dp"
        android:scrollHorizontally="true"
        android:text="Status"
        android:textSize="14sp" />


</RelativeLayout>
