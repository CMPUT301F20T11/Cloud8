<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/request_imageView"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/listview_photo_border"
        app:srcCompat="@drawable/ic_stock_book_photo_foreground" />

    <TextView
        android:id="@+id/request_title"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/request_imageView"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/request_author"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="11dp"
        android:layout_toRightOf="@+id/request_imageView"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Author"
        android:textStyle="italic"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/request_isbn"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_author"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@+id/request_imageView"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="ISBN"
        android:textColor="#CCCCCC"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/request_from"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_isbn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/request_imageView"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="22sp"
        android:text="From" />


</RelativeLayout>
